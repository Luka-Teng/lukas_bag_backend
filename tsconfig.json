{
  "compilerOptions": {
    // 指定编译后的输出目录
    "outDir": "./dist",
    // 目标 ECMAScript 版本，Node.js 支持的版本通常较新
    "target": "es2018",
    
    // 模块代码生成：CommonJS
    "module": "commonjs",
    
    // 启用 JSX
    "jsx": "react",

    // 启用装饰器
    "experimentalDecorators": true,

    // 启用一些严格类型检查选项
    "strict": true,

    // 启用对未声明的变量进行类型检查
    "noImplicitAny": true,

    // 启用对类型守卫和类型断言的严格检查
    "strictNullChecks": true,

    // 启用对类型推断的严格检查
    "strictFunctionTypes": true,

    // 启用对类型参数的严格检查
    "strictBindCallApply": true,

    // 启用对 this 参数的类型检查
    "strictPropertyInitialization": true,

    // 启用对未知属性的严格检查
    "noImplicitThis": true,

    // 启用对声明文件的生成
    "declaration": true,

    // 启用对声明目录的指定
    "declarationDir": "./dist/types",

    // 启用对源代码映射文件的生成
    "sourceMap": true,

    // 启用对导入的模块进行基于文件路径的解析
    "baseUrl": "./",

    // 路径别名，例如：{"@": "./src"}
    "paths": {
      "@/*": ["./src/*"]
    },
    
    // 启用 ES 模块互操作性
    "esModuleInterop": true,

    // 允许从 CommonJS 模块中导入命名导出
    "allowSyntheticDefaultImports": true
  },
  
  // 指定编译的入口文件
  "include": [
    "src/**/*"
  ],

  // 指定编译排除的文件
  "exclude": [
    "node_modules",
    "**/*.spec.ts"
  ]
}