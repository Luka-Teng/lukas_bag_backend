generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum Role {
  SCHOOL
  TEACHER
  PARENT
}

model User {
  id   Int    @id @default(autoincrement())
  name String

  // 用于微信登陆
  openId String? @unique

  // 用于账号密码登陆
  email    String? @unique
  password String?

  phone String? @unique
  role  Role    @default(PARENT)
}
